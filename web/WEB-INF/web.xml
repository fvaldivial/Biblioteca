<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>pe.arq.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarServlet</servlet-name>
        <servlet-class>pe.arq.servlets.RegistrarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registro</servlet-name>
        <servlet-class>pe.arq.servlets.Registro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TodosServlet</servlet-name>
        <servlet-class>pe.arq.servlets.TodosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UnoServlet</servlet-name>
        <servlet-class>pe.arq.servlets.UnoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificarServlet</servlet-name>
        <servlet-class>pe.arq.servlets.ModificarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarServlet</servlet-name>
        <url-pattern>/RegistrarServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registro</servlet-name>
        <url-pattern>/Registro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TodosServlet</servlet-name>
        <url-pattern>/TodosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UnoServlet</servlet-name>
        <url-pattern>/UnoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificarServlet</servlet-name>
        <url-pattern>/ModificarServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
